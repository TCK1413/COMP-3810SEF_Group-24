    <nav class="navbar navbar-expand-md bg-dark sticky-top border-bottom nav-elevated" data-bs-theme="dark">
      <div class="container">
        <a class="navbar-brand d-md-none d-flex align-items-center gap-2" href="/">
          <svg class="bi" width="24" height="24" aria-hidden="true"><use xlink:href="#aperture"></use></svg>
          <span class="fw-semibold">MyStore</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" aria-controls="offcanvas" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLabel">MyStore</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>

          <div class="offcanvas-body d-flex align-items-center">

            <%
              let initialCartCount = 0;
              let initialTotalPrice = 0;
              if (typeof session !== 'undefined' && session.cart && Array.isArray(session.cart)) {
                initialCartCount = session.cart.reduce((total, item) => total + (item.quantity || 0), 0);
                initialTotalPrice = session.cart.reduce((total, item) => total + ((item.quantity || 0) * (item.price || 0)), 0);
              }
            %>

            <!-- Left: Home / Product -->
            <ul class="navbar-nav mx-auto left-nav justify-content-around mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link link-light fx d-flex align-items-center" href="/" aria-label="MyStore Home">
                  <svg class="bi me-1" width="24" height="24" aria-hidden="true"><use xlink:href="#aperture"></use></svg>
                  <span class="d-none d-lg-inline"></span>
                </a>
              </li>
              <li class="nav-item mx-md-3">
                <a class="nav-link link-light fx" href="/">Home</a>
              </li>
              <li class="nav-item mx-md-3">
                <a class="nav-link link-light fx" href="/products">Product</a>
              </li>
            </ul>

            <!-- Right: account | cart | order lookup -->
            <ul class="navbar-nav mb-2 mb-md-0 align-items-center">

              <% if (typeof session !== 'undefined' && session.authenticated) { %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle d-flex align-items-center link-light fx" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <svg class="bi me-2" width="16" height="16" aria-hidden="true"><use xlink:href="#person-fill"></use></svg>
                    Welcome, <%= session.username %>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-dark">
                    <li><a class="dropdown-item" href="/user/profile">User Profile</a></li>
                    <li><a class="dropdown-item" href="/user/orders">My Orders</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="/auth/logout">Logout</a></li>
                  </ul>
                </li>
              <% } else { %>
                <li class="nav-item">
                  <a class="nav-link d-flex align-items-center link-light fx" href="/auth/login">
                    <svg class="bi me-2" width="16" height="16" aria-hidden="true"><use xlink:href="#person-fill"></use></svg>
                    Login / Sign Up
                  </a>
                </li>
              <% } %>

              <li class="d-none d-md-flex align-items-center mx-2"><div class="nav-divider"></div></li>

              <li class="nav-item dropdown">
                <a class="nav-link d-flex align-items-center position-relative link-light fx" href="/cart"
                   id="cart-dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Cart">
                  <svg class="bi" width="24" height="24" aria-hidden="true"><use xlink:href="#cart"></use></svg>
                  <span class="position-absolute top-25 start-75 translate-middle badge rounded-pill bg-danger"
                        id="cart-badge" style="<%= initialCartCount > 0 ? '' : 'display: none;' %>">
                    <%= initialCartCount %>
                  </span>
                </a>

                <div class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="cart-dropdown-toggle" id="cart-preview-dropdown" style="min-width: 300px;">
                  <div id="cart-preview-items">
                    <% if (initialCartCount > 0 && session.cart) { %>
                      <% session.cart.forEach(item => { %>
                        <div class="dropdown-item d-flex align-items-center px-3 py-2">
                          <img src="<%= item.imageUrl ? item.imageUrl : '/images/placeholder.png' %>" alt="<%= item.name %>" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 10px;">
                          <div class="flex-grow-1">
                            <div class="small fw-semibold text-white"><%= item.name %></div>
                            <div class="small text-muted"><%= item.quantity %> x $<%= item.price.toFixed(2) %></div>
                          </div>
                        </div>
                      <% }) %>
                    <% } else { %>
                      <div class="dropdown-item px-3 py-2" id="cart-preview-empty">Your cart is empty.</div>
                    <% } %>
                  </div>

                  <div id="cart-preview-footer" style="<%= initialCartCount > 0 ? '' : 'display: none;' %>">
                    <hr class="dropdown-divider">
                    <div class="d-flex justify-content-between align-items-center px-3 py-2">
                      <strong>Total: $<span id="cart-preview-total"><%= initialTotalPrice.toFixed(2) %></span></strong>
                      <a href="/cart" class="btn btn-light btn-sm">Go to Cart</a>
                    </div>
                  </div>
                </div>
              </li>

              <li class="d-none d-md-flex align-items-center mx-2"><div class="nav-divider"></div></li>

              <li class="nav-item">
                <a class="btn btn-outline-light btn-sm fx-outline" href="/orders/lookup">Order Lookup</a>
              </li>
            </ul>

          </div>
        </div>
      </div>
    </nav>

