<%- include('../../partials/_top', { title: typeof title !== 'undefined' ? title : 'Order Detail' }) %>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h4 mb-0">
        Order #<%= order._id %>
        <% if (order.statusView) { %>
          <span class="badge <%= order.statusView.className %> ms-2"><%= order.statusView.label %></span>
        <% } %>
      </h1>
      <div class="text-muted small">
        Placed at: <%= (helpers && helpers.formatDate) ? helpers.formatDate(order.createdAt) : order.createdAt %>
      </div>
    </div>

    <% if (publicView) { %>
      <a href="/orders/lookup" class="btn btn-sm btn-outline-secondary">Back</a>
    <% } else { %>
      <a href="/user/orders" class="btn btn-sm btn-outline-secondary">Back to Orders</a>
    <% } %>
  </div>

  <div class="row g-4">
    <div class="col-lg-7">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Order Summary</h5>
          <ul class="list-unstyled mb-0">
            <% if (order.customerEmail) { %>
              <li class="mb-1"><span class="text-muted">Email:</span> <strong><%= order.customerEmail %></strong></li>
            <% } %>
            <% if (order.stripeSessionId && false) { %>
              <li class="mb-1"><span class="text-muted">Stripe Session:</span> <code><%= order.stripeSessionId %></code></li>
            <% } %>
          </ul>
        </div>
      </div>

      <% if (order.shippingAddress) { %>
      <div class="card shadow-sm mt-3">
        <div class="card-body">
          <h5 class="card-title mb-3">Shipping Address</h5>
          <address class="mb-0">
            <div><%= order.shippingAddress.street %></div>
            <div><%= order.shippingAddress.city %>, <%= order.shippingAddress.postalCode %></div>
            <div><%= order.shippingAddress.country %></div>
            <% if (order.shippingAddress.phone) { %>
              <div>Phone: <%= order.shippingAddress.phone %></div>
            <% } %>
          </address>
        </div>
      </div>
      <% } %>
    </div>

    <div class="col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Items</h5>

          <% if (!items || items.length === 0) { %>
            <div class="text-muted">No items found in this order.</div>
          <% } else { %>
            <ul class="list-group list-group-flush">
              <% items.forEach(function(it){ 
                   const img = it.imageUrl || (it.images && it.images[0]) || it.image || '/images/placeholder.png';
                   const name = it.name || ('Product ' + (it.productId || ''));
                   const price = (typeof it.price === 'number') ? Number(it.price) : null;
                   const qty = (typeof it.quantity === 'number') ? Number(it.quantity) : 0;
              %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-start">
                    <img src="<%= img %>" alt="" class="rounded border me-3" style="width:48px;height:48px;object-fit:cover;">
                    <div>
                      <div class="fw-semibold"><%= name %></div>
                      <div class="text-muted small">
                        Qty: <%= qty %>
                        <% if (price !== null) { %> â€¢ $<%= price.toFixed(2) %> each <% } %>
                      </div>
                    </div>
                  </div>
                  <% if (price !== null) { %>
                    <div class="fw-semibold">$<%= (price * qty).toFixed(2) %></div>
                  <% } %>
                </li>
              <% }) %>
            </ul>

            <div class="d-flex justify-content-between align-items-center mt-3">
              <div class="text-muted">Total</div>
              <div class="fs-5 fw-semibold">$<%= Number(totalAmount || 0).toFixed(2) %></div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="alert alert-light border d-flex align-items-center justify-content-between">
      <div>
        <strong>Have questions about your order?</strong>
        <a href="#" class="ms-1" data-bs-toggle="modal" data-bs-target="#supportModal">Contact Customer Service</a>
      </div>
      <a href="/products" class="btn btn-primary">Continue Shopping</a>
    </div>
  </div>
</div>

<div class="modal fade" id="supportModal" tabindex="-1" aria-labelledby="supportModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="supportModalLabel">Contact Customer Service (Demo)</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This is a demonstration page and does not provide real customer service.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/_bottom') %>

